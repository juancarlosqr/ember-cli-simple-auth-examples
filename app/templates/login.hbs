<div class="jumbotron">
    <h1>Login</h1>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-6">
        <h3>With username / password</h3>
        <form {{action 'authenticate' on='submit' }}>
            <div class="form-group">
                <label for="identification">Login</label>
                {{input id='identification' placeholder='Enter Login' value=identification class="form-control"}}
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                {{input id='password' placeholder='Enter Password' type='password' value=password class="form-control"}}
            </div>
            <div>
                <p class="text-muted">
                    <small>use login:letme - password:in</small>
                </p>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="col-xs-12 col-sm-6">
        <h3>With Facebook</h3>
        <button class="btn btn-primary" {{action 'facebookLogin'}}>
            Login with Facebook
        </button>
    </div>
</div>
